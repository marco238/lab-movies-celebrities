{{#if movie}}
<h2>Edit:</h2>
<form action="/movies/{{movie._id}}/edit" method="post">
{{else}}
<h2>Create a movie:</h2>
<form action="/movies/create" method="post">
{{/if}}
  <label for="title">Title:</label>
  <input required type="text" name="title" id="title" placeholder="Title" value="{{movie.title}}" required>
  <br>
  <label for="genre">Genre:</label>
  <input required type="text" name="genre" id="genre" placeholder="Genre" value="{{movie.genre}}" required>
  <br>
  <label for="plot">Plot:</label>
  <input required type="text" name="plot" id="plot" placeholder="Plot" value="{{movie.plot}}" required>
  <br>
  <label for="cast">Cast:</label>
  <select name="cast" id="cast" multiple>
    {{#each celebrities}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <br>
  {{#if movie}}
    <button type="submit">Edit Movie</button>
  {{else}}
    <button type="submit">Create Movie</button>
  {{/if}}
</form>

{{#if errorMessage}}
  <p style="color: red;">{{errorMessage}}</p>
{{/if}}